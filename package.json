{
  "name": "andela-teams-core",
  "version": "0.0.1",
  "description": "This is the core server for Andela Teams",
  "main": "index.js",
  "engines": {
    "node": "9.7.1",
    "npm": "5.6.0",
    "yarn": "1.5.1"
  },
  "scripts": {
    "babel-node": "babel-node ./src/server --presets=env",
    "build": "npm run remove-build && npm run build:server && npm run db:migrate",
    "build:server": "./node_modules/.bin/babel -d ./build ./src -s --copy-files",
    "build-and-start": "npm run build && npm start",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate",
    "db:reset": "./node_modules/.bin/sequelize db:migrate:undo:all && ./node_modules/.bin/sequelize db:migrate",
    "db:reset:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate:undo:all && NODE_ENV=test ./node_modules/.bin/sequelize db:migrate && npm run db:seed:database:test",
    "db:seed:database:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:seed:undo:all && NODE_ENV=test ./node_modules/.bin/sequelize db:seed:all",
    "eslint": "./node_modules/.bin/eslint src",
    "eslint-fix": "./node_modules/.bin/eslint --fix src",
    "heroku-postbuild": "npm run build",
    "remove-build": "./node_modules/.bin/rimraf ./build",
    "start": "NODE_ENV=production ./node_modules/.bin/forever -m 5 ./build/server.js",
    "start:dev": "NODE_ENV=development nodemon --exec npm run babel-node ./src/server",
    "coverage": "NODE_ENV=test nyc --reporter=html --reporter=text ./node_modules/mocha/bin/_mocha 'test/**/*.js' --compilers js:babel-core/register --timeout 10000 --exit",
    "test": "npm run db:reset:test && NODE_ENV=test nyc --reporter=html --reporter=text mocha test/**/*.js --require babel-polyfill --require babel-register --timeout 20000 --exit"
  },
  "pre-commit": [
    "eslint"
  ],
  "repository": "https://github.com/andela-stuff/andela-teams-core",
  "author": "Franklin Chieze <chieze.franklin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^3.16.0",
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "forever": "^0.15.3",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.10",
    "mocha": "^4.1.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "requestretry": "^1.13.0",
    "rimraf": "^2.6.2",
    "sequelize": "^4.31.2",
    "sequelize-cli": "^4.0.0",
    "sinon": "^4.1.5",
    "swagger-ui-express": "^4.0.1",
    "validatorjs": "^3.14.2",
    "webpack": "^4.1.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.14.11",
    "nyc": "^11.4.1",
    "pre-commit": "^1.2.2",
    "source-map-support": "^0.5.0"
  }
}
